<div id="header3"></div> 
  <%= render "layouts/flash"%>
    <div class= "container">
      <div class="block">
         <%= image_tag "bg-2.jpg" %>
      </div>
      <div class= "block-2">
          <div class= "login-container">
              <div><h1> Login  </h1></div>
  
                   <%= form_tag :action => 'check_login' do %>
                   <div class = "password">
                        <label for="email">  </label><br> 
                        <input class="shortInput form-control" name="email" placeholder="Email"  type="text" ><br>
                    </div>
                    <label for="password"></label><br>
                    <div class = "password">
                         <input class="pass-field form-control" name="password" placeholder="Password"  type="password" id="password">
                         <input class="pass-icon" type="checkbox" onclick="myFunction()">
                    </div><br>
                    <button class="btn btn-outline-primary" >Login</button>
                    <p><span style="color: #3366cc">If you are not member please</span> <a href= "/user/signup">
                    <button class="dropbtn dropbtn-outline-primary" type="button">Signup</button>
                    </a>
                    <% end%>
              <div>
              <p>Forgot password, Reset using <span style="color: red">Registered Email</span>
          
              <span style="color: #3366cc"></span>
              <a href= "/reset_password/email_check" style="text-decoration: none;">
              CLICK HERE
              </a>
              </p>
          </div>
        </div>
      </div>  
   </div> 

<script>
 function myFunction() { 
 var x = document.getElementById("password"); 

   if (x.type === "password") { 
     x.type = "text"; 
   } else {
    x.type = "password";
  } 
 } 
 </script> 
        