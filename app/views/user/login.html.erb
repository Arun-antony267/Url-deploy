 <div id="content"></div> 
  <%= render "layouts/flash"%>
   
   <div class="p-1">
 <center>
  <h1> Login  </h1>
 <%= form_tag :action => 'check_login' do %>
 
        <label for="email">  </label><br>
        <input class="shortInput" name="email" placeholder="Email"  type="text" style="width: 500px;"><br>

        <label for="password"></label><br>
        <input class="shortInput" name="password" placeholder="Password"  type="password" id="password" style="width: 500px;"><br><input type="checkbox" onclick="myFunction()">Show Password<br>
        <button class="btn btn-outline-primary" >Login</button>
          <%= @error%>
          <% end%>
          <p><%= @dis%>
           </center>
          </div>
          <script>
function myFunction() {
  var x = document.getElementById("password");

  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>
         