 <div id="content"></div> 
   <div class="container">
    </div>
    <%= render "layouts/flash" %>
    <div class="p-1">
       <center>
      <h1> Sign Up </h1>
     
 <%= form_tag :action => 'create' do %>
 <label for="name"></label><br>
      <input class="shortInput" name="name" placeholder="User Name"   type="text" style="width: 500px"><br>
 
        <label for="email"></label><br>
       <input class="shortInput" name="email" placeholder="Email" type="text" style="width: 500px"><br>

        <label for="password"></label><br>
      <input class="shortInput" name="password" placeholder="Password" type="text" style="width: 500px"><br>

        <label for="confirmPassword"></label><br>
      <input class="shortInput" name="password_confirmation" placeholder="Confirm password" type="text" style="width: 500px"><br>
 <button class="btn btn-outline-primary"  >Signup</button>
 <% end %>
 </center>
 </div>
