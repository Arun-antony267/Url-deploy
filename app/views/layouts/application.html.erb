    <title>URL Shortener</title>
       <style>

body {
             background-color: black;
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 250px;
        }
        
body {font-family: Arial, Helvetica, sans-serif;}
* {box-sizing: border-box}
        input[type="text1"] {
            width: 80%;
            padding: 10px;
            margin: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

/* Full-width input fields */
input[type=text], input[type=password] {
  width: 100%;
  padding: 15px;
  margin: 5px 0 22px 0;
  display: inline-block;
  border: none;
  background: #f1f1f1;
}

input[type=text]:focus, input[type=password]:focus {
  background-color: #ddd;
  outline: none;
}

hr {
  border: 1px solid #f1f1f1;
  margin-bottom: 25px;
}
        /* Set a style for all buttons */
button {
  color: black;
  border: none;
}

button:hover {
  opacity:1;
}
.signupbtn {
 padding: 1px 1px;
  background-color: #f44336;
}
/* Extra styles for the cancel button */
.loginbtn {
  padding: 1px 1px;
  background-color: #f44336;
}
/* Float cancel and signup buttons and add an equal width */
.loginbtn, .signupbtn {
  float: center;
  width: 15%;
}

.dropbtn {
  background-color: transparent;
  color: #46bff7;
  padding: 16px;
  font-size: 16px;
  border: none;
  cursor: pointer;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  right: 0;
  background-color: #f9f9f9;
  min-width: 160px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {background-color: transparent}

.dropdown:hover .dropdown-content {
  display: block;
}

.dropdown:hover .dropbtn {
  background-color: white;
}
.p {
  font-family: verdana;
  font-size: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  height :60vh;

}

.p-1 {
  font-family: verdana;
  font-size: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  height :60vh;

}

.box-1{
  text-align: left;
  height: 300px;
  width: 500px;
  background-color: #a9cfe9a1;
}

.box{
  text-align: center;
  background-color: rgb(255, 255, 255);
  height: 200px;
  width: 500px;
  border: transparent solid rgb(82, 127, 224);
  padding: 35px;
  margin: 0px;
  cursor: pointer;
  transition: all 0.5s  ease;
}

.box:hover{

    color: var(--bs-box-hover-color);
    background-color: var(--bs-box-hover-bg);
    border-color: var(--bs-box-hover-border-color);
  
}

.box-outline{
  --bs-box-color: #000000;
  --bs-box-border-color: transparent;
  --bs-box-hover-color: #fff;
  --bs-box-hover-bg: #46bff7;
  --bs-box-hover-border-color: #46bff7;
  --bs-box-focus-shadow-rgb: 25, 135, 84;
  --bs-box-active-color: #fff;
  --bs-box-active-bg: #46bff7;
  --bs-box-active-border-color: transparent;
  --bs-box-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
}

ul {
  list-style-type: none;
  padding:0.5rem;
  overflow: hidden;
  background-color: transparent;
}

li {
  float: left;
}

li a {
   padding:0.5rem;
}


 </style>


    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Following will make the react components availabe to our layout -->
      <%= javascript_pack_tag 'application' %>
      <%= javascript_pack_tag "hello_react" %>
      <%= javascript_pack_tag "count" %>  
      <%= javascript_pack_tag "copy_url" %>  
      <%= javascript_pack_tag "show"%> 

    <body >

       <%= yield %>
       
    </body>
</html>