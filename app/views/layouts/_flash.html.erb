 <% if flash.any? %> 
 <% flash.each do |type, msg| %>
 <% if msg != confirm %>
 <div class="container alert alert-info " id="flash-message">
    <%= msg%>
 </div> 
 <% else %>
 <div class="form-container ">
      <%= form_tag :action => 'delete_urls' do %>  
       <%= hidden_field_tag id="id" , @user_details.id %>
    <%= msg%>
    <button class= "btn btn-outline-primary" type = "submit" >Confirm Delete</button>
    <% end %>
 </div>
 <% end %> 
 <% end %> 
 <script type="text/javascript">

    var timeout = 2000;

    // Function to hide the flash message after a timeout
    function hideFlashMessage() {
      var flashMessage = document.getElementById('flash-message');
      if (flashMessage) {

        flashMessage.style.display = 'none';
        
      }
    }

    // Set the timeout
    setTimeout(hideFlashMessage, timeout);
  </script>
<% end %>
