<style>
  body {
    background-image: url(<%= asset_path "bg-4.jpg" %>);
    background-size: cover;
    background-position: center center;
    height: 100vh;
  }

  .white-box {
    background-color: white;
    border: 1px solid black;
    padding: 10px;
    border-radius: 5px;
    margin-left: 5px;
    margin-right: 5px;
  }
</style>

<div id="header2"></div>

<body>
  <%= render "layouts/flash" %>

      <% n=0 %>
      <div class= "con">
          <div class='box-url' >
             <% @short_url.each do |short_url| %>
            The Original URL is:
            <div class="row white-box">
              <%= short_url.original_url %>
            </div>

            The Shortened URL is:
            <div class="row white-box" id="short<%= n+1 %>" value="<%= short_url.shortened_url %>">
              <%= short_url.shortened_url %>
            </div>
             <br>
            <button class="btn btn-outline-primary" onclick="copyText('<%= short_url.shortened_url %>')">Copy The Link</button>
            <br>
            <br>
                       <% end %>
          </div> 
          </div>


  <script>
    function copyText(shortenedUrl) {
      var inputField = document.createElement("input");
      document.body.appendChild(inputField);
      inputField.setAttribute('value', shortenedUrl);
      inputField.select();
      document.execCommand('copy');
      document.body.removeChild(inputField);
      alert("Copied the text: " + shortenedUrl);
    }
  </script>
</body>
